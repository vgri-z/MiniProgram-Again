<!--pages/index/index.wxml-->
<!-- 1.小程序的数据绑定: {{}} MUstache语法 -->
<view>Hello {{name}}</view>
<view>my age: {{age}}</view>

<!-- 2.列表展示：wx:for -->
<view wx:for="{{students}}">{{item.name}} - {{item.age}} - {{item.id}}</view>

<!-- 3.事件监听改变data -->
<view>当前计数: {{counter}}</view>
<button size="mini" bind:tap="handleIncrement">+</button>
<button size="mini" bind:tap="handleDecrement">-</button>